<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="USD Converter" Height="350" Width="525" Icon="kcalc.ico" WindowStartupLocation="CenterScreen">
	<Grid>
		<Label x:Name="label" Content="USD" HorizontalAlignment="Left" Margin="73,79,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" FontFamily="Javanese Text" Width="73" FontStyle="Italic"/>
		<Label x:Name="label_Copy" Content="RUB" HorizontalAlignment="Left" Margin="73,139,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" FontFamily="Javanese Text" Width="73" FontStyle="Italic"/>
		<TextBox x:Name="textBoxUSD" HorizontalAlignment="Left" Height="33" Margin="151,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153" FontSize="24" FontFamily="Segoe UI Semibold" FontWeight="Bold" TextDecorations="{x:Null}" RenderTransformOrigin="0.516,0.626" TextChanged="textBoxUSD_TextChanged"/>
		<TextBox x:Name="textBoxRUB" HorizontalAlignment="Left" Height="33" Margin="151,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153" FontSize="24" FontFamily="Segoe UI Semibold" FontWeight="Bold" TextDecorations="{x:Null}"/>

	</Grid>
</Window>
