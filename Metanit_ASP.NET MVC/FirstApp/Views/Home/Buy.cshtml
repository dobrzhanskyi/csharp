
@{
    ViewBag.Title = "Buy a book";
}

    <div>
        <h3>Purchasing form</h3>
        <form method="post">
            <input type="hidden" value="@ViewBag.BookId" name="BookId" />
            <table>
                <tr>
                    <td><p>Enter your name</p></td>
                    <td><input type="text" name="Person" /></td>
                </tr>
                <tr>
                    <td><p>Enter your adress :</p></td>
                    <td><input type="text" name="Adress" /></td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Buy" />
                    </td>
                </tr>
            </table>
        </form>
    </div>

